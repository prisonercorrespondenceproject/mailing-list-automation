{
  "compilerOptions": {
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "nodenext",
    "noEmit": true,
    "strict": true,
    "allowUnreachableCode": false,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}